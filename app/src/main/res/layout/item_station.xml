<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:baselineAligned="false"
    android:paddingVertical="1dp"
    android:paddingHorizontal="2dp"
    android:background="?attr/selectableItemBackground">
    <LinearLayout
        android:id="@+id/item_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="2dp"
        android:background="@drawable/item_border">

        <TextView
            android:id="@+id/properties_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="San Jose, San Jose International Airport" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/properties_id"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ellipsize="end"
                tools:text="KHAF" />
            <TextView
                android:id="@+id/properties_elevation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                tools:text="19.812 m"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/properties_coordinates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ellipsize="end"
                tools:text="-122.4996, 37.5135999" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
